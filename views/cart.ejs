<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Your Cart</title>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    body {
      background: linear-gradient(135deg, #fef3e7, #d9f99d); /* soft orange to green gradient */
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      min-height: 100vh;
    }

    h1 {
      font-weight: 700;
      color: #ea580c;
      text-align: center;
      font-size: 2.5rem;
      margin-bottom: 2rem;
      text-shadow: 1px 1px 5px rgba(0,0,0,0.2);
    }

    .cart-container {
      max-width: 1200px;
      margin: auto;
      background: #fff;
      border-radius: 25px;
      padding: 40px;
      box-shadow: 0 20px 50px rgba(0,0,0,0.15);
    }

    .cart-item {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 20px;
      border-radius: 20px;
      margin-bottom: 20px;
      transition: all 0.4s ease;
      background: linear-gradient(145deg, #fef9f0, #fef3e7);
      box-shadow: 0 10px 25px rgba(0,0,0,0.05);
    }

    .cart-item:hover {
      transform: translateY(-5px);
      box-shadow: 0 15px 35px rgba(0,0,0,0.2);
    }

    .cart-item img {
      border-radius: 20px;
      width: 120px;
      height: 120px;
      object-fit: cover;
    }

    .cart-item h2 {
      font-weight: 700;
      color: #ea580c;
      font-size: 1.4rem;
    }

    .cart-item p {
      font-size: 1rem;
      color: #16a34a;
      margin: 4px 0;
    }

    .cart-buttons {
      display: flex;
      flex-direction: column;
      gap: 10px;
      align-items: flex-end;
    }

    .btn-remove {
      background: linear-gradient(90deg, #f87171, #ef4444);
      color: white;
      font-weight: 600;
      padding: 8px 16px;
      border-radius: 12px;
      transition: all 0.3s ease;
      box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }

    .btn-remove:hover {
      transform: scale(1.1);
      box-shadow: 0 8px 25px rgba(0,0,0,0.2);
    }

    .btn-buy {
      background: linear-gradient(90deg, #34d399, #10b981);
      color: white;
      font-weight: 600;
      padding: 10px 20px;
      border-radius: 15px;
      transition: all 0.3s ease;
      box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }

    .btn-buy:hover {
      transform: scale(1.1);
      box-shadow: 0 8px 25px rgba(0,0,0,0.2);
    }

    .btn-continue {
      display: block;
      margin: 30px auto 0;
      background: linear-gradient(90deg, #fb923c, #f97316);
      color: white;
      font-weight: 700;
      padding: 14px 28px;
      border-radius: 20px;
      font-size: 1.1rem;
      text-align: center;
      box-shadow: 0 8px 30px rgba(0,0,0,0.2);
      transition: all 0.3s ease;
    }

    .btn-continue:hover {
      transform: scale(1.05);
      box-shadow: 0 12px 40px rgba(0,0,0,0.25);
    }

    .empty-cart {
      text-align: center;
      padding: 80px 0;
      font-size: 1.3rem;
      font-weight: 600;
      color: #ea580c;
    }

    @media(max-width: 768px){
      .cart-item {
        flex-direction: column;
        align-items: center;
        text-align: center;
      }
      .cart-buttons {
        flex-direction: row;
        gap: 15px;
        margin-top: 15px;
      }
      .cart-item img {
        width: 150px;
        height: 150px;
      }
    }
  </style>
</head>
<body>
  <h1>Your Cart</h1>

  <div class="cart-container">
    <% if (cartItems && cartItems.length > 0) { %>
      <ul>
        <% cartItems.forEach(item => { %>
          <% if(item.productId) { %>
            <li class="cart-item">
              <div class="flex items-center gap-4">
                <img src="<%= item.productId.imageUrl %>" alt="<%= item.productId.name %>">
                <div>
                  <h2><%= item.productId.name %></h2>
                  <p class="text-gray-600"><%= item.productId.description %></p>
                  <p>Price: $<%= item.productId.price.toFixed(2) %></p>
                  <p>Quantity: <%= item.quantity %></p>
                </div>
              </div>
              <div class="cart-buttons">
                <button class="btn-remove" onclick="removeFromCart('<%= item._id %>')">Remove</button>
                <button class="btn-buy" onclick="buyNow('<%= item.productId._id %>', '<%= item.quantity %>')">Buy Now</button>
              </div>
            </li>
          <% } else { %>
            <li class="cart-item">
              <div class="flex-1 text-red-500 font-semibold">Product not found. It may have been removed.</div>
              <div>
                <button class="btn-remove" onclick="removeFromCart('<%= item._id %>')">Remove</button>
              </div>
            </li>
          <% } %>
        <% }); %>
      </ul>
    <% } else { %>
      <div class="empty-cart">Your cart is empty.</div>
    <% } %>

    <a href="/products" class="btn-continue">Continue Shopping</a>
  </div>

  <script>
    function removeFromCart(cartItemId) {
      $.ajax({
        url: `/cart/remove/${cartItemId}`,
        type: 'DELETE',
        success: function() { location.reload(); },
        error: function() { alert('Error removing item'); }
      });
    }

    function buyNow(productId, quantity) {
      window.location.href = `/checkout?productId=${productId}&quantity=${quantity}`;
    }
  </script>
</body>
</html>
