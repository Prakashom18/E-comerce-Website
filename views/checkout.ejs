<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Checkout</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <script>
        // Update total amount when quantity changes
        function updateTotalAmount() {
            const price = parseFloat(document.getElementById('productPrice').innerText);
            const quantity = parseInt(document.getElementById('quantityDisplay').innerText);
            const shippingCharge = parseFloat(document.getElementById('shippingChargeValue').innerText);

            if (isNaN(price) || isNaN(quantity) || isNaN(shippingCharge)) return;

            const totalAmount = (price * quantity) + shippingCharge;
            document.getElementById('totalAmount').innerText = totalAmount.toFixed(2);
            document.getElementById('hiddenTotalAmount').value = totalAmount.toFixed(2);
            document.getElementById('hiddenTotalQuantity').value = quantity;
        }

        function changeQuantity(amount) {
            const quantityDisplay = document.getElementById('quantityDisplay');
            let currentQuantity = parseInt(quantityDisplay.innerText);
            currentQuantity += amount;
            if (currentQuantity < 1) currentQuantity = 1;
            quantityDisplay.innerText = currentQuantity;
            updateTotalAmount();
        }

        window.onload = updateTotalAmount;
    </script>
</head>
<body class="bg-gray-100">
    <div class="flex justify-center items-center min-h-screen">
        <div class="bg-white p-6 rounded-lg shadow-md w-full max-w-2xl">
            <h1 class="text-3xl font-bold mb-4">Checkout</h1>

            <div class="flex flex-row">
                <div class="flex-1 pr-8">
                    <h2 class="text-2xl font-semibold mb-2"><%= product.name %></h2>
                    <p class="text-gray-700 mb-2"><%= product.description %></p>
                    <p class="text-lg font-semibold mb-2">Price: $<span id="productPrice"><%= product.price.toFixed(2) %></span></p>
                    <p class="text-lg font-semibold mb-2">Shipping Charge: $<span id="shippingChargeValue">5.00</span></p>

                    <div class="flex items-center mb-4">
                        <label class="block text-lg font-semibold mr-2">Quantity:</label>
                        <button type="button" onclick="changeQuantity(-1)" class="bg-gray-300 text-black rounded px-2 py-1">-</button>
                        <span id="quantityDisplay" class="mx-2 text-lg font-semibold">1</span>
                        <button type="button" onclick="changeQuantity(1)" class="bg-gray-300 text-black rounded px-2 py-1">+</button>
                    </div>

                    <p class="text-lg font-bold mt-4">Total Amount: $<span id="totalAmount"><%= (product.price + 5).toFixed(2) %></span></p>

                    <!-- eSewa Payment Form -->
                    <form action="https://uat.esewa.com.np/epay/main" method="POST" class="mt-4">
                        <input type="hidden" name="tAmt" id="esewaTotal" value="<%= (product.price + 5).toFixed(2) %>">
                        <input type="hidden" name="amt" value="<%= (product.price + 5).toFixed(2) %>">
                        <input type="hidden" name="txAmt" value="0">
                        <input type="hidden" name="psc" value="0">
                        <input type="hidden" name="pdc" value="0">
                        <input type="hidden" name="scd" value="EPAYTEST"> <!-- Merchant code -->
                        <input type="hidden" name="pid" value="<%= product._id %>">
                        <input type="hidden" name="su" value="http://localhost:3000/esewa_success?pid=<%= product._id %>">
                        <input type="hidden" name="fu" value="http://localhost:3000/esewa_failure?pid=<%= product._id %>">

                        <button type="submit" class="bg-green-500 text-white py-2 px-4 rounded mt-4">Pay with eSewa</button>
                    </form>

                    <a href="/products" class="mt-4 inline-block bg-blue-500 text-white py-2 px-4 rounded">Return to Products</a>
                </div>

                <div class="flex-none">
                    <img src="<%= product.imageUrl %>" alt="<%= product.name %>" class="w-48 h-auto rounded">
                </div>
            </div>
        </div>
    </div>

    <script>
        // Update the eSewa hidden total dynamically when quantity changes
        const quantityDisplay = document.getElementById('quantityDisplay');
        const productPrice = parseFloat(document.getElementById('productPrice').innerText);
        const shippingCharge = parseFloat(document.getElementById('shippingChargeValue').innerText);
        const esewaTotal = document.getElementById('esewaTotal');

        function syncEsewaTotal() {
            const quantity = parseInt(quantityDisplay.innerText);
            const total = (productPrice * quantity) + shippingCharge;
            esewaTotal.value = total.toFixed(2);
        }

        // Listen for quantity changes
        document.querySelectorAll('button').forEach(btn => {
            btn.addEventListener('click', syncEsewaTotal);
        });
    </script>
</body>
</html>
