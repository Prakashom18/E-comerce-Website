<!-- views/checkout.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Checkout</title>
<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
<script>
    const shippingCharge = 5.00;

    function updateTotalAmount() {
        const price = parseFloat(document.getElementById('productPrice').innerText);
        const quantity = parseInt(document.getElementById('quantityDisplay').innerText);
        const totalAmount = (price * quantity) + shippingCharge;

        document.getElementById('totalAmount').innerText = totalAmount.toFixed(2);
        document.getElementById('hiddenTotalAmount').value = totalAmount.toFixed(2);
        document.getElementById('hiddenTotalQuantity').value = quantity;
    }

    function changeQuantity(amount) {
        let quantityDisplay = document.getElementById('quantityDisplay');
        let currentQuantity = parseInt(quantityDisplay.innerText) + amount;
        if (currentQuantity < 1) currentQuantity = 1;
        quantityDisplay.innerText = currentQuantity;
        updateTotalAmount();
    }

    window.onload = updateTotalAmount;
</script>
</head>
<body class="bg-gray-100">
<div class="flex justify-center items-center min-h-screen">
<div class="bg-white p-6 rounded-lg shadow-md w-full max-w-2xl">
<h1 class="text-3xl font-bold mb-4">Checkout</h1>
<div class="flex flex-row">
    <div class="flex-1 pr-8">
        <h2 class="text-2xl font-semibold mb-2"><%= product.name %></h2>
        <p class="text-gray-700 mb-2"><%= product.description %></p>
        <p class="text-lg font-semibold mb-2">Price: $<span id="productPrice"><%= product.price.toFixed(2) %></span></p>
        <p class="text-lg font-semibold mb-2">Shipping Charge: $<span id="shippingChargeValue"><%= shippingCharge.toFixed(2) %></span></p>

        <div class="flex items-center mb-4">
            <label class="block text-lg font-semibold mr-2">Quantity:</label>
            <button type="button" onclick="changeQuantity(-1)" class="bg-gray-300 text-black rounded px-2 py-1">-</button>
            <span id="quantityDisplay" class="mx-2 text-lg font-semibold">1</span>
            <button type="button" onclick="changeQuantity(1)" class="bg-gray-300 text-black rounded px-2 py-1">+</button>
        </div>

        <p class="text-lg font-bold mt-4">Total Amount: $<span id="totalAmount"><%= (product.price + shippingCharge).toFixed(2) %></span></p>

        <form action="/checkout/complete" method="POST" class="mt-4">
            <input type="hidden" name="productId" value="<%= product._id %>">
            <input type="hidden" id="hiddenTotalAmount" name="totalAmount" value="<%= (product.price + shippingCharge).toFixed(2) %>">
            <input type="hidden" id="hiddenTotalQuantity" name="totalQuantity" value="1">

            <div class="mt-4">
                <label class="block text-lg font-semibold">Full Name:</label>
                <input type="text" name="fullName" required class="mt-2 border rounded w-full p-2">
            </div>
            <div class="mt-4">
                <label class="block text-lg font-semibold">Email:</label>
                <input type="email" name="email" required class="mt-2 border rounded w-full p-2">
            </div>
            <div class="mt-4">
                <label class="block text-lg font-semibold">Phone:</label>
                <input type="tel" name="phone" required class="mt-2 border rounded w-full p-2">
            </div>
            <div class="mt-4">
                <label class="block text-lg font-semibold">Street Address:</label>
                <input type="text" name="streetAddress" required class="mt-2 border rounded w-full p-2">
            </div>
            <div class="mt-4">
                <label class="block text-lg font-semibold">Temporary Address:</label>
                <input type="text" name="temporaryAddress" class="mt-2 border rounded w-full p-2">
            </div>

            <div class="mt-4">
                <label class="block text-lg font-semibold">Payment Method:</label>
                <select name="paymentMethod" class="mt-2 border rounded w-full p-2">
                    <option value="esewa">eSewa</option>
                    <option value="cash-on-delivery">Cash on Delivery</option>
                </select>
            </div>

            <button type="submit" class="bg-green-500 text-white py-2 px-4 rounded mt-4">Confirm Purchase</button>
        </form>
    </div>
    <div class="flex-none">
        <img src="<%= product.imageUrl %>" alt="<%= product.name %>" class="w-48 h-auto rounded">
    </div>
</div>
</div>
</div>
</body>
</html>
